{
  "name": "Pipeline Manager UI",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "prettier": "prettier --check \"**/*.{js,jsx,ts,tsx,json,html,css,scss,yml,yaml,md}\"",
    "prettier:write": "prettier --write \"**/*.{js,jsx,ts,tsx,json,html,css,scss,yml,yaml,md}\" --ignore-unknown",
    "prepare": "husky",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,html,css,scss,yml,yaml,md}": [
      "npm run prettier:write"
    ]
  },
  "dependencies": {
    "@carbon/react": "^1.89.0",
    "@microsoft/fetch-event-source": "^2.0.1",
    "@reduxjs/toolkit": "^2.8.2",
    "axios": "^1.12.2",
    "date-fns": "^4.1.0",
    "i18next": "^25.3.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.6.1",
    "react-markdown": "^10.1.0",
    "react-redux": "^9.2.0",
    "reselect": "^5.1.1",
    "rxjs": "^7.8.2",
    "socket.io-client": "^4.8.1",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@jest/types": "^30.0.5",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/react-i18next": "^8.1.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "sass": "^1.90.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  }
}
